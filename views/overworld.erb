

<div class="pokemon-filter">	
	
	
</div>

<div class="pokemon-list" id="overworld">

	<div class="overworld-canvas" style='height:<%= @height * 20 %>px;width:<%= @width * 20 %>px'>

		<% (0..@overworld['npc_count']-1).each do |ov_index| %>

			<div class="overworld-item" data-id="npc-<%= ov_index  %>" style='bottom: <%= (@box[1][1] - @overworld["npc_#{ov_index}_y_cord"]) * 20 %>px;
			right: <%= (@box[1][0] - @overworld["npc_#{ov_index}_x_cord"]) * 20 %>px'>

				<%= img "overworlds/#{@overworld["npc_#{ov_index}_overworld_sprite"] + 6}.png", 'overworld-sprite' %>
				
			</div>


		<% end %>
		
	</div>
	
</div>


